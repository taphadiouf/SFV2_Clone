        <actions>
            <name>LPCR_StatutPretAEnvoyer</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>(1 OR 5) AND( 2 OR 6) AND (3 AND 4)</booleanFilter>
        <criteriaItems>
            <field>SBQQ__Quote__c.SBQQ__Type__c</field>
