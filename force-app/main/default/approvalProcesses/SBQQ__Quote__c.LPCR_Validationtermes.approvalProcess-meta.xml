<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>LPCR_TypeAvenant__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>LPCR_DirectionJuridique</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Validation de la Direction Juridique</label>
        <name>LPCR_ValidationDJ</name>
    </approvalStep>
    <emailTemplate>unfiled$public/LPCR_DemandeApprobationModification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND (4 OR 5)</booleanFilter>
        <criteriaItems>
            <field>SBQQ__Quote__c.SBQQ__Type__c</field>
            <operation>equals</operation>
            <value>Amendment</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.SBQQ__Primary__c</field>
            <operation>equals</operation>
            <value>Vrai</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.LPCR_TypeAvenant__c</field>
            <operation>equals</operation>
            <value>Modification des termes du contrat</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.RecordType</field>
            <operation>equals</operation>
            <value>Contrat de Référencement</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.RecordType</field>
            <operation>equals</operation>
            <value>Contrat Réservataire</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>LPCR_DevisAccepte</name>
            <type>Alert</type>
        </action>
        <action>
            <name>LPCR_StatutApprouve</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>LPCR_DevisRejete</name>
            <type>Alert</type>
        </action>
        <action>
            <name>LPCR_StatutRejete</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>LPCR_StatutAttente</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Validation du changement des termes</label>
    <recallActions>
        <action>
            <name>LPCR_StatutRappel</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
