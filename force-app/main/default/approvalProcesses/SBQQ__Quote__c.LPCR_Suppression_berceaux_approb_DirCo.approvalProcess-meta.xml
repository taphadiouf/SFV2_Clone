<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>LPCR_TypeAvenant__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Demande d&apos;approbation à la Direction Commerciale lors de la suppression de berceaux.</description>
        <label>Approbation suppression de berceaux</label>
        <name>LPCR_Approbation_suppression_de_berceaux</name>
        <rejectionActions>
            <action>
                <name>LPCR_Amendement_refuse</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>La suppression de berceaux entraine l&apos;approbation par la Direction Commerciale.</description>
    <emailTemplate>unfiled$public/LPCR_DemandeApprobationModification</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>SBQQ__Quote__c.SBQQ__Type__c</field>
            <operation>equals</operation>
            <value>Amendment</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.LPCR_TypeAvenant__c</field>
            <operation>equals</operation>
            <value>Ajout/Suppression Berceau</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.RecordType</field>
            <operation>equals</operation>
            <value>Contrat de Réservation,Contrat de Réservation Approuvé</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>LPCR_Changmt_statut_approb_acceptee</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>LPCR_Notif_email_approbation_approuvee</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>LPCR_Changmt_statut_approb_refusee</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>LPCR_Notif_email_approb_refusee</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>LPCR_Soumission_Approbation</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Suppression_berceaux_approbation_DirCo</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recallActions>
        <action>
            <name>LPCR_Changmt_statut_rappel_approb</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
